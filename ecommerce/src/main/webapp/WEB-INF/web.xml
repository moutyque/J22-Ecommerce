<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
	<display-name>Archetype Created Web Application</display-name>

	<!-- _____________________________________________Servlet declaration______________________________________________________ -->
	<!-- Client servlets -->
	<servlet>
		<servlet-name>clientCreation</servlet-name>
		<servlet-class>com.ecommerce.servlets.CreationClient</servlet-class>
		<load-on-startup>1</load-on-startup>
		<multipart-config>
			<location>D:\eclipse-workspace\pro\fichiers</location>
			<max-file-size>10485760</max-file-size> <!-- 10 Mo -->
			<max-request-size>52428800</max-request-size> <!-- 5 x 10 Mo -->
			<file-size-threshold>1048576</file-size-threshold> <!-- 1 Mo -->
		</multipart-config>
	</servlet>


	<!-- Commande servlets -->
	<servlet>
		<servlet-name>commandeCreation</servlet-name>
		<servlet-class>com.ecommerce.servlets.CreationCommande</servlet-class>
		<load-on-startup>1</load-on-startup>
		<multipart-config>
			<location>D:\eclipse-workspace\pro\fichiers</location>
			<max-file-size>10485760</max-file-size> <!-- 10 Mo -->
			<max-request-size>52428800</max-request-size> <!-- 5 x 10 Mo -->
			<file-size-threshold>1048576</file-size-threshold> <!-- 1 Mo -->
		</multipart-config>
	</servlet>

	<!-- List clients servlets -->
	<servlet>
		<servlet-name>listeClients</servlet-name>
		<servlet-class>com.ecommerce.servlets.ListClients</servlet-class>
	</servlet>

<!-- List commandes servlets -->
	<servlet>
		<servlet-name>listeCommandes</servlet-name>
		<servlet-class>com.ecommerce.servlets.ListCommandes</servlet-class>
	</servlet>
	<!-- _____________________________________________Servlet mapping______________________________________________________ -->

	<!-- Client servlets mapping -->
	<servlet-mapping>
		<servlet-name>clientCreation</servlet-name>
		<url-pattern>/clientCreation</url-pattern>
	</servlet-mapping>


	<!-- Commande servlets mapping -->
	<servlet-mapping>
		<servlet-name>commandeCreation</servlet-name>
		<url-pattern>/commandeCreation</url-pattern>
	</servlet-mapping>

	<!-- List clients servlets mapping -->
	<servlet-mapping>
		<servlet-name>listeClients</servlet-name>
		<url-pattern>/listeClients</url-pattern>
	</servlet-mapping>
	
	<!-- List commandes servlets mapping -->
	<servlet-mapping>
		<servlet-name>listeCommandes</servlet-name>
		<url-pattern>/listeCommandes</url-pattern>
	</servlet-mapping>
	
	<!-- _____________________________________________Filter declaration______________________________________________________ -->

	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>ignore</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<!-- _____________________________________________Filter mapping______________________________________________________ -->



	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
